/* pages/schedule/schedule.wxss */
page {
  background-color: #f6f6f6;
  border-top: 1px solid rgb(242,242,242);
}

.createSchedule {
  margin-top: 5px;
  width: 100%;
  /* padding: 3% 3% 3% 5%; */
  /* position: absolute; */
}

.section1 {
  margin-top: 5px;
  padding-left: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1px solid rgb(242,242,242);
  border-bottom: 1px solid rgb(234,234,234);
}


.field{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  font-weight: bold;
  color: #000;
  border-bottom:1px solid rgb(234,234,234);
  /* margin-bottom: 8px; */
  padding-left: 1%;
}

.field:last-child {
  border: 0;
}

.field input {
  font-weight: normal;
}

.login-input {
  font-size: 16px;
  line-height: 35px;
}

.form_class {
  width: 100%;
}

.form_button {
  background-color: transparent;
  padding: 0;
  padding-top: 6px;
  margin: 0;
  text-align: left;
}
 
.form_button::after {
  border: 0px;
}

switch {
  float: right;
  margin-right: 8%;
  margin-top: -3px;
  zoom: .75;
}

.picker text {
  color: rgb(171,171,171);
  font-weight: normal;
  float:right;
  margin-right:10%;
}

#repetition {
  padding-top:6px;
}

/* 多行文本框 */

textarea{
  width: 100%;
  height: 100px;
  line-height: 25px;
  font-size: 16px;
  padding-left: 5px;
}

.btn_login{
  margin-top:30px;
  width:300rpx;
  height:40px;
  text-align:center;
  left:60%;
  margin-left:-200rpx;
  color:#fff;
  font-size: 22px;
  line-height: 40px;
}