/* pages/eventDetail/eventDetail.wxss */
@import "../../style/icon.wxss";

page {
  background-color: #f6f6f6;
  border-top: 1px solid rgb(242,242,242);
}

.createSchedule{
  margin-top: 5px;
  width: 100%;
}

.section1 {
  margin-top: 5px;
  padding-left: 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1px solid rgb(242,242,242);
  border-bottom: 1px solid rgb(234,234,234);
}


.field{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  font-weight: bold;
  color: #000;
  border-bottom:1px solid rgb(234,234,234);
  /* margin-bottom: 8px; */
  padding-left: 1%;
}

.field:last-child {
  border: 0;
}

.field text {
  color: rgb(171,171,171);
  font-weight: normal;
  float:right;
  margin-right:10%;
}

.listEdit{
  display: flex;
  flex-direction: row;
  justify-content:center;
  flex-wrap: wrap;
  align-items:center;
  width: 50%;
  padding-left: 35%;
}
.icon-xiugai,.icon-shanchu{
  font-size: 23px;
  width: 50%;
  margin-top: 15%;
  
}